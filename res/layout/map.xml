<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#ec2427"
            android:src="@drawable/top" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ec2427"
        android:gravity="left">

        <Button
        android:id="@+id/map_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_tab" />

   		<Button
        android:id="@+id/map_major"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_major" />
   		 
   		<Button
        android:id="@+id/map_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_food" />
          

        </LinearLayout>

 	<ScrollView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

 	<LinearLayout
 		    android:layout_width="match_parent"
 		    android:layout_height="match_parent"
 		    android:orientation="vertical" >

 			<LinearLayout
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="vertical"
 			    android:layout_weight="1" >

 				<ImageView
 				    android:id="@+id/schoolbus"
 				    android:layout_width="match_parent"
 				    android:layout_height="match_parent"
 				    android:scaleType="fitXY"
 				    android:src="@drawable/map" />

 			</LinearLayout>
 			

 		</LinearLayout>
 	
    </ScrollView>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom" >
        
        <Button
        android:id="@+id/map_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_back"/>

    <Button
        android:id="@+id/map_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_home"/>

    <Button
        android:id="@+id/map_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_card"/>

    <Button
        android:id="@+id/map_logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/map_logout" />
    </LinearLayout>

   

</LinearLayout>