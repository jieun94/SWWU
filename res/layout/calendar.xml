<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#ec2427"
            android:src="@drawable/top" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ec2427"
        android:gravity="left">

    <Button
        android:id="@+id/calender_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/calender_tab" />

    <ImageView
        android:id="@+id/calender_non"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:background="@drawable/calender_non"/>
    
    <ImageView
        android:id="@+id/calender_non2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:background="@drawable/calender_non"/>
        
      </LinearLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.99"
        android:background="@drawable/calendar_top" >

        <RelativeLayout
            android:id="@+id/previous"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_margin="35dp"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:textColor="#000000"
            android:textSize="35dip"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/next"
            android:layout_width="40dip"
            android:layout_height="30dip"
             android:layout_margin="35dp"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow_right" />
        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="322dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="24.08"
        android:listSelector="@android:color/transparent"
        android:numColumns="7"
        android:stretchMode="columnWidth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="16.16"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" >

            <TableRow
                android:id="@+id/tablerow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
            <TextView
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="금일 일정">

            </TextView>
			
            <TextView
		            android:id="@+id/today_day"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="30sp" />
           


            </TableRow>

            <TableRow
                android:id="@+id/tablerow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            
            <TextView
		            android:id="@+id/today_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="30sp"
		            android:layout_margin="20dp"/>
            
            </TableRow>

        </TableLayout>

    </LinearLayout>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="bottom" >
       
      
      <Button
        android:id="@+id/calendar_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/calender_back"/>

    <Button
        android:id="@+id/calendar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/calender_home"/>

    <Button
        android:id="@+id/calendar_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/calender_card"/>

    <Button
        android:id="@+id/calendar_logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/calender_logout" />
    </LinearLayout>

</LinearLayout>